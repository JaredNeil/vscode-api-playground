{
    "name": "vscode-powermode",
    "displayName": "vscode-powermode",
    "description": "",
    "version": "0.0.1",
    "publisher": "hoovercj",
    "engines": {
        "vscode": "^1.13.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "properties": {
                 "powermode.enabled": {
                     "default": false,
                     "type":"boolean",
                     "description": "Enable to activate POWER MODE!!!"
                 }, 
                 "powermode.comboThreshold": {
                     "default": 0,
                     "type": "number",
                     "description": "The combo number needed to activate POWER MODE!!!"
                 },
                 "powermode.comboTimeout": {
                     "default": 10,
                     "type": "number",
                     "description": "The number of seconds before the combo resets"
                 },
                 "powermode.explosion": {
                    "type": "string",
                    "description": "Anything that can go in the 'url()' part of a background image such as a base64 encoded gif or absolute file path WITHOUT quotes."
                 }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}