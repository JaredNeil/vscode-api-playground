{
    "name": "vscode-newfile-languagemode",
    "displayName": "New File with Language Mode",
    "description": "",
    "version": "1.0.0",
    "publisher": "hoovercj",
    "engines": {
        "vscode": "^1.10.0"
    },
    "author": {
        "name": "Cody Hoover",
        "url": "www.codyhoover.com",
        "email": "vscode@codyhoover.com"
    },
    "bugs": {
        "url": "https://www.github.com/hoovercj/vscode-api-playground/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://www.github.com/hoovercj/vscode-api-playground"
    },
    "icon": "images/icon.png",
    "license": "MIT",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "editor.newFile.withCurrentLanguageMode",
                "title": "Open new file with language mode of the currently active editor"
            }
        ],
        "configuration": {
            "properties": {
                "editor.newFile.languageModes": {
                    "type": "array",
                    "default": [],
                    "description": "An array of language ids to create commands for. For each language created here, a command of the form `editor.newFile.withLanguageId.<id>` will be created (e.g. `editor.newFile.withLanguageId.html`)."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}