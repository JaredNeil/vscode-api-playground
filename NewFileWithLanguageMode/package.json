{
    "name": "vscode-api-playground-newfile-languagemode",
    "displayName": "VSCode Api Playground: New File with Language Mode",
    "description": "",
    "version": "0.0.1",
    "publisher": "hoovercj",
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "editor.newFile.withLanguageMode",
                "title": "Open new file with default language mode"
            }
        ],
        "configuration": {
            "properties": {
                "editor.newFile.defaultLanguageMode": {
                    "type": "string",
                    "default": "",
                    "description": "The language id of the language to open new files with"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}